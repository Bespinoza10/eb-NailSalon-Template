              <li class="mobile-menu-title">
                <div class="user-view">
                  <h4>THE NAIL PARLOR</h4>
                  <hr>
                </div>
              </li>
              <li><a href="<%= root_path %>">Home</a></li>
              <li><a href="<%= root_path%>#about">About Us</a></li>
              <li><a href="<%= root_path%>#services">Services</a></li>
              <li><a href="<%= new_contact_path%>">Contact Us</a></li>
            </ul>
           <%end%>
        </div>
      </div>
    </nav>
  </div>
<%= yield %>

