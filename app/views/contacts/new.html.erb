<header class="contact-bg valign-wrapper">
  <div class="container">
    <div class="row">
      <div class="col s12 bg-text">
          <h1 class="center">Contact Us</h1>
          </div>
      </div>
    </div>
  </div>
</header>

<div class="row">
  <div class="container">
    <div class="col s12 m10 l10 center-column" style="padding-top: 6%">
      <h3 class="left">Send Us a Message</h3>
      <div class="col s12 l12" style="padding-bottom: 6%;">
        <%= form_for @contact do |f| %>
          <div class="row">

            <div class="input-field col s12 m4 l4">
              <%= f.label :name %>
              <%= f.text_field :name, required: true %>
            </div>


            <div class="input-field col s12 m4 l4">
              <%= f.label :email%>
              <%= f.email_field :email, required: true%>
            </div>

            <div class="input-field col s12 m4 l4">
              <%= f.label :phone%>
              <%= f.telephone_field :phone, required: true%>
            </div>

            <div class="input-field col s12 m12 l12">
              <%= f.label :message%>
              <%= f.text_area :message, as: :text, class: "materialize-textarea"%>
            </div>


            <div class="input-field col s12 m12 l12 hide">
              <%= f.label :nickname %>
              <%= f.text_field :nickname, hint: 'leave this field blank' %>
            </div>

            <div class="input-field col s12 m12 l12">
              <button class="btn waves-effect waves-light verde" type="submit" name="action">Get In Touch With Us</button>
            </div>

          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
